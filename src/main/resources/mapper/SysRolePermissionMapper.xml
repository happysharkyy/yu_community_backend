<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.douyuehan.doubao.mapper.SysRolePermissionMapper">
    <!--用户权限列表-->
    <select id="selectByRoleId" resultType="com.douyuehan.doubao.model.entity.SysRolePermission" parameterType="INTEGER">
        SELECT rp.*
        FROM sys_user u,
             sys_role_permission rp,
             sys_permission p
        WHERE u.role_id = rp.role_id
          AND u.role_id = ${roleId}
          AND rp.permission_id = p.id
          AND p.pid = 0
    </select>
</mapper>
